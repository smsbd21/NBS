@model NBS.Tb_Users
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/fonts/awesome/css/all.min.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
</head>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="container">
            <h2><strong>Billing Management Portal</strong></h2>
            <hr />
            @Html.ValidationSummary(true, "Login Failed! Invalid Username or password.", new { @class = "text-danger" })
            <div class="row offset-md-2" style="margin-top: 5%">
                <div class="form-group col-lg-4">
                    @Html.LabelFor(model => model.User, "User Name", htmlAttributes: new { @class = "control-label" })
                    @Html.ValidationMessageFor(model => model.User, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.User, new { htmlAttributes = new { @class = "form-control" } })
                    <p style="color:gray">[Example : abc, xyz, abc@xyz.com]</p>
                </div>
            </div>
            <div class="row offset-md-2">
                <div class="form-group col-lg-4">
                    @Html.LabelFor(model => model.Pwd, "Password", htmlAttributes: new { @class = "control-label" })
                    @Html.ValidationMessageFor(model => model.Pwd, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Pwd, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="row offset-md-2">
                <div class="form-group col-lg-4">
                    <button type="submit" class="btn btn-success btn-block">
                        <i class="fas fa-sign-in-alt">&nbsp;&nbsp;Login</i>
                    </button> @Html.ActionLink("Back to Home", "Index")
                </div>
            </div>
        </div>
    }
</body>

</html>
