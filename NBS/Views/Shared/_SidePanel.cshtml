@using NBS.Code

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@Variables.ShortName</title>
    <link rel="icon" href="~/images/QSLogo.gif" type="image/icon" />
    <!-- Bootstrap and Fontfaces CSS -->
    <link href="~/fonts/awesome/css/all.min.css" rel="stylesheet">
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Content/sidebar.css" rel="stylesheet" />
    <!-- Bootstrap core JavaScript -->
    <script src="~/Scripts/vendor/jquery/jquery.min.js"></script>
</head>

<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <i class="fas fa-landmark mr-2"></i>Welcome<br>@Session["login"]
            </div>
            <div class="list-group list-group-flush">
                <a href="~/Users/Index" class="list-group-item list-group-item-action bg-light"><i class="fas fa-users"></i> User Info</a>
                <a href="~/Roles/Index" class="list-group-item list-group-item-action bg-light"><i class="fas fa-users-cog"></i> Role Info</a>
                <a href="~/Area/Index" class="list-group-item list-group-item-action bg-light"><i class="fas fa-code-branch"></i> Area Info</a>
                <a href="~/Type/Index" class="list-group-item list-group-item-action bg-light"><i class="fas fa-share-alt"></i> Categories</a>
                <a href="~/Client/Index" class="list-group-item list-group-item-action bg-light"><i class="fas fa-sitemap"></i> Client Info</a>
                <a href="~/Collect/Index" class="list-group-item list-group-item-action bg-light"><i class="fas fa-anchor"></i> Collections</a>
            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-primary" id="menu-toggle"><i class="fas fa-bars"></i> Show/Hide</button>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Link</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Dropdown
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>
                        <li class="nav-item active">
                            @*@Html.ActionLink("Main", "Main", "Auth")*@
                            <a class="nav-link" href="@Url.Action("Logout","Auth")">
                                <i class="fas fa-sign-out-alt"></i> Logout</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container-fluid">
                @RenderBody()
                <hr />
                <footer id="colorlib-footer" role="contentinfo">
                    <small class="block">
                        Copyright &copy;
                        <script>document.write(new Date().getFullYear());</script>
                        All rights reserved | This template is made with
                        <i class="fas fa-globe" aria-hidden="true"></i> by
                        <a href="https://quicksoftbd.com" target="_blank">Quicksoft</a>
                    </small>
                </footer>
            </div>
        </div>
        <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->
    <!-- Bootstrap core JavaScript -->
    <script src="~/Scripts/vendor/js/bootstrap.bundle.min.js"></script>
    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>
